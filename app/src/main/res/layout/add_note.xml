<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/toolbar_actionbar" layout="@layout/toolbar_default"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="42dp"
        android:scaleType="fitCenter"
        android:minHeight="42dp"
        android:background="@null"
        android:id="@+id/imageButton"
        android:src="@drawable/ic_barcode"
        android:layout_below="@+id/toolbar_actionbar"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Tag/CE"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="42dp"
        android:scaleType="fitCenter"
        android:minHeight="42dp"
        android:background="@null"
        android:id="@+id/imageButton1"
        android:src="@drawable/ic_barcode"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:hint="Serial Number"
        android:layout_alignBottom="@+id/imageButton1"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButton1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="42dp"
        android:scaleType="fitCenter"
        android:minHeight="42dp"
        android:background="@null"
        android:id="@+id/imageButton3"
        android:src="@drawable/ic_barcode"
        android:layout_below="@+id/imageButton1"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="Manufactuer"
        android:layout_below="@+id/imageButton1"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButton1" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="42dp"
        android:scaleType="fitCenter"
        android:minHeight="42dp"
        android:background="@null"
        android:id="@+id/imageButton2"
        android:src="@drawable/ic_barcode"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:hint="Model"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButton2" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"

        android:hint="\n\n\n\n\nProblem/Solution"
        android:lines="8"
        android:minLines="6"
        android:gravity="top|left"
        android:maxLines="10"
        android:ems="10"
        android:scrollbars="vertical"
        android:id="@+id/editText4"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Note!"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="41dp"
        android:layout_alignEnd="@+id/imageButton2"
        android:layout_alignParentStart="true" />


</RelativeLayout>
