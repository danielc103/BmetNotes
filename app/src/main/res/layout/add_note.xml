<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="42dp"
        android:scaleType="fitCenter"
        android:minHeight="42dp"
        android:background="@null"
        android:id="@+id/imageButtonTag"
        android:src="@drawable/ic_barcode"
        android:layout_below="@+id/toolbar_actionbar"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTag"
        android:hint="@string/tag_editText"
        android:layout_alignBottom="@+id/imageButtonTag"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButtonTag" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="42dp"
        android:scaleType="fitCenter"
        android:minHeight="42dp"
        android:background="@null"
        android:id="@+id/imageButtonSN"
        android:src="@drawable/ic_barcode"
        android:layout_below="@+id/imageButtonTag"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSN"
        android:hint="@string/sn_editText"
        android:layout_alignBottom="@+id/imageButtonSN"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButtonSN" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="42dp"
        android:scaleType="fitCenter"
        android:minHeight="42dp"
        android:background="@null"
        android:id="@+id/imageButtonManf"
        android:src="@drawable/ic_barcode"
        android:layout_below="@+id/imageButtonSN"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextManf"
        android:hint="@string/manf_editText"
        android:layout_below="@+id/imageButtonSN"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButtonSN" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="42dp"
        android:scaleType="fitCenter"
        android:minHeight="42dp"
        android:background="@null"
        android:id="@+id/imageButtonModel"
        android:src="@drawable/ic_barcode"
        android:layout_below="@+id/imageButtonManf"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextModel"
        android:hint="@string/model_editText"
        android:layout_alignBottom="@+id/imageButtonModel"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButtonModel" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="@string/solution_editText"
        android:lines="8"
        android:minLines="6"
        android:gravity="top|left"
        android:maxLines="10"
        android:ems="10"
        android:scrollbars="vertical"
        android:id="@+id/editTextSolution"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/imageButtonModel"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_button"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerProjects"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />


</RelativeLayout>
